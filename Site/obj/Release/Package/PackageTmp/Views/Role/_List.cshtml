@model Models.Role.GridViewModel
<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
    </div>
    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-striped table-bordered table-hover nowrap" id="dataTable">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1"></th>
                        <th>@Resources.Resource.RoleId</th>
                        <th>@Resources.Resource.RoleName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    @if (ViewBag.CanQuery)
                                    {
                                        <a class="blue" href="#" onclick="Detail('@item.RoleId');" title="@Resources.Resource.Detail">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>
                                    }
                                    @if (ViewBag.CanEdit)
                                    {
                                        <a class="green" href="#" onclick="Edit('@item.RoleId');" title="@Resources.Resource.Edit">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        if (ViewBag.CanCreate)
                                        {
                                            <a class="orange2" href="#" onclick="Copy('@item.RoleId');" title="@Resources.Resource.Copy">
                                                <i class="ace-icon fa fa-copy bigger-130"></i>
                                            </a>
                                        }
                                    }
                                    @if (ViewBag.CanDelete)
                                    {
                                        <a class="red" href="#" onclick="Delete('@item.RoleId');" title="@Resources.Resource.Delete">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                            <td>@item.RoleId</td>
                            <td>@item.RoleName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

