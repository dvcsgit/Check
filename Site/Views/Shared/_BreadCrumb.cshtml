<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        @if (ViewBag.CurrentPage != null)
        {
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index","Home",new { area = "" })">
                    @if (ViewBag.Lang == "zh-cn")
                    {
                        <text>首页</text>
                    }
                    else
                    {
                        <text>Home</text>
                    }
                </a>
            </li>

            <li>
                <a href="#">@ViewBag.CurrentAncestorPage</a>
            </li>

            if (ViewBag.CurrentParentPage != null)
            {
                <li>
                    <a href="#">@ViewBag.CurrentParentPage</a>
                </li>
            }

            <li class="active">@ViewBag.CurrentPage</li>
        }
        else
        {
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>

            <li>
                <a href="#">Other Pages</a>
            </li>
            <li class="active">Blank Page</li>
        }
    </ul><!-- /.breadcrumb -->    
</div>

