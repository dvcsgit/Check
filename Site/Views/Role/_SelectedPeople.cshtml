@model IEnumerable<Models.Role.PersonModel>

<table class="table table-striped table-bordered table-hover nowrap">
    <thead class="thin-border-bottom">
        <tr>
            <th class="col-sm-1 center"></th>
            <th>@Resources.Resource.Organization</th>
            <th>@Resources.Resource.PId</th>
            <th>@Resources.Resource.PersonName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="center">
                    <div class="action-buttons">
                        <a class="red" href="#" onclick="DeletePerson('@item.PId'); return false;" title="@Resources.Resource.Delete">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>
                </td>
                <td>@item.OrganizationName</td>
                <td>@item.PId</td>
                <td>@item.PersonName</td>
            </tr>
        }
    </tbody>
</table>

